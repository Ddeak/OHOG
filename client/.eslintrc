{
    "env": {
        "browser": true,
        "node":true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-uses-vars": 1,
        "quotes": ["error","single"],
        "semi": ["error","never"],
        "no-console": ["error", { allow: ["debug", "error", "table"] }]
    }
}